html
  head
    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible" content="IE=edge")
    title LODHA WRD MANAGER
    meta(name="description" content="")
    meta(name="viewport" content="width=device-width, initial-scale=1")
    
    link(rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous")
    script(src="https://code.jquery.com/jquery-3.3.1.min.js" integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8=" crossorigin="anonymous")
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js" integrity="sha384-b/U6ypiBEHpOf/4+1nzFpr53nxSS+GLCkfwBdFNTxtclqqenISfwAzpKaMNFNmj4" crossorigin="anonymous"></script>
    script(src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous")
    link(href="https://fonts.googleapis.com/css?family=Lato" rel="stylesheet")
    link(rel="stylesheet",href="./stylesheet/styles.css")
    link(rel="shortcut icon" href="images/favicon.ico")
  body
    nav.navbar.bg-dark.text-white
      span.navbar-brand.mb-0.h1 LODHA WRD MANAGERv2

    .container-fluid
      .row.mt-1
        .col-sm-12.col-lg-10.offset-lg-1
            #alert_container.mt-1
              //.card-body.p-1
        //Customer Card
        .col-sm-12.col-lg-10.offset-lg-1
          
        .col-sm-12.col-lg-5.offset-lg-1
          .card.mt-2
            .card-header.bg-primary.text-white.pt-1.pb-1 
              strong CUSTOMER DETAILS
              button.btn.btn-danger.float-right.px-2.py-1(type="button" data-toggle="modal" data-target="#modal-cust-shutdown")
                img.img.rounded-circle.my-icon(src="./images/shutdown.svg")
            .card-body.p-1
              form
                .row
                  .col
                    label.col-sm-6.col-lg-12.col-form-label(for="cust-name")
                      strong Cust. Name
                  .col
                    input#cust-name.form-control-plaintext(type="text" readonly="" value= custName?custName:"-")
                .row
                  .col
                    label.col-sm-6.col-lg-12.col-form-label(for="cust-num")
                      strong Cust. No.
                  .col
                    input#cust-num.form-control-plaintext(type="text" readonly="" value=custNum?custNum:"-")
                .row
                  .col
                    label.col-sm-6.col-lg-12.col-form-label(for="cust-wrd")
                      strong Cust. WRD No.
                  .col
                    input#cust-wrd.form-control-plaintext(type="text" readonly="" value=custWrd?custWrd:"-")
                .row
                  .col
                    label.col-sm-6.col-lg-12.col-form-label(for="sm-recordStatus")
                      strong Recording
                  .col
                    input#cust-recordStatus.form-control-plaintext(type="text" readonly="" value="-")
                // The Modal
                #modal-cust-shutdown.modal.fade
                  .modal-dialog
                    .modal-content
                      // Modal Header
                      .modal-header.bg-danger.text-white
                        h4.modal-title Confirm Customer WRD Shutdown!
                        button.close(type='button', data-dismiss='modal') x
                      // Modal body
                      .modal-body.text-justify
                        strong WARNING
                        br
                        br
                        | You are about to shutdown a Wearable recording device. 
                        | To turn ON the device after shutting down, you will have to use the
                        | physical button located on the device. 
                        br
                        br
                        | To proceed, press "Confirm Shutdown"
                      // Modal footer
                      .modal-footer
                        button#btn-cust-shutdown.btn.btn-danger(type='button' data-dismiss="modal") CONFIRM SHUTDOWN
                        button.btn.btn-secondary(type='button', data-dismiss='modal') CANCEL
        .col-sm-12.col-lg-5
          .card.mb-1.mt-2
            .card-header.bg-primary.text-white.pt-1.pb-1 
              strong SM DETAILS
              button.btn.btn-danger.float-right.px-2.py-1(type="button" data-toggle="modal" data-target="#modal-sm-shutdown")
                img.img.rounded-circle.my-icon(src="./images/shutdown.svg")
            .card-body.p-1
              form
                .row
                  .col
                    label.col-sm-6.col-lg-12.col-form-label(for="sm-name")
                      strong SM Name
                  .col
                    input#sm-name.form-control-plaintext(type="text" readonly="" value=smName?smName:"-")
                .row
                  .col
                    label.col-sm-6.col-lg-12.col-form-label(for="sm-id")
                      strong SM ID
                  .col
                    input#sm-id.form-control-plaintext(type="text" readonly="" value=smId?smId:"-")
                .row
                  .col
                    label.col-sm-6.col-lg-12.col-form-label(for="sm-wrd")
                      strong SM WRD No.
                  .col
                    input#sm-wrd.form-control-plaintext(type="text" readonly="" value=smWrd?smWrd:"-")
                .row
                  .col
                    label.col-sm-6.col-lg-12.col-form-label(for="sm-recordStatus")
                      strong Recording
                  .col
                    input#sm-recordStatus.form-control-plaintext(type="text" readonly="" value="-")
                // The Modal
                #modal-sm-shutdown.modal.fade
                  .modal-dialog
                    .modal-content
                      // Modal Header
                      .modal-header.bg-danger.text-white
                        h4.modal-title Confirm Sales Manager's WRD Shutdown!
                        button.close(type='button', data-dismiss='modal') x
                      // Modal body
                      .modal-body.text-justify
                        strong WARNING
                        br
                        br
                        | You are about to shutdown a Wearable recording device. 
                        | To turn ON the device after shutting down, you will have to use the
                        | physical button located on the device. 
                        br
                        br
                        | To proceed, press "Confirm Shutdown"
                      // Modal footer
                      .modal-footer
                        button#btn-sm-shutdown.btn.btn-danger(type='button' data-dismiss="modal") CONFIRM SHUTDOWN
                        button.btn.btn-secondary(type='button', data-dismiss='modal') CANCEL
        .col-sm-12.col-lg-5.offset-lg-1
          .card.mt-2
            .card-header.bg-danger.text-white.pt-2.pb-0
              strong RECORDING CONTROL
              label.switch.float-right(data-toggle="tooltip" data-placement="bottom" title="Toggle the button below to simultaneously start or stop recording on BOTH WRDs")
                input#wrdControlSwitch(type="checkbox")
                span.slider

    script.
      let urlparams ={
        eventId: '#{eventId}'
      };
      let config = {
        
        aws: {
                s3: {
                    url: '#{config.aws.s3.url}'
                }
            },
        wrd:{
          port: '#{config.wrd.port}',
          timeout: '#{config.wrd.timeout}',
          rate: '#{config.wrd.rate}',
          channels: '#{config.wrd.channels}',
          frames_per_buffer: '#{config.wrd.frames_per_buffer}'
        }
      };
    script(src="./javascript/moment.min.js") 
    script(src="./javascript/main.js")
